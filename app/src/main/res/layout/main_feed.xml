<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_feed_recycler"
        android:layout_width="410dp"
        android:layout_height="673dp"
        android:scrollbars="vertical"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_feed_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/navbar_sort_button"
        android:layout_width="67dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/main_feed_navbar"
        app:layout_constraintTop_toBottomOf="@+id/main_feed_recycler"
        app:srcCompat="@drawable/ic_baseline_sort_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/navbar_add_button"
        android:layout_width="73dp"
        android:layout_height="55dp"

        android:layout_marginStart="96dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/navbar_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/main_feed_recycler"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <ImageButton
        android:id="@+id/navbar_profile_button"
        android:layout_width="67dp"
        android:layout_height="50dp"

        android:background="#00FFFFFF"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_feed_recycler"
        app:srcCompat="@drawable/baseline_person_white_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/guest_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="588dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

</androidx.constraintlayout.widget.ConstraintLayout>